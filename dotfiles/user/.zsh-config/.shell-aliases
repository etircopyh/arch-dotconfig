# pacman
alias pacq='pacman -Q'
alias pacqq='pacman -Qq'
alias pacqo='pacman -Qo'
alias pacqi='pacman -Qi'
alias pacql='pacman -Ql'
alias pacqs='pacman -Qs'
alias pacqet='pacman -Qet'
alias pacs='pacman -S'
alias pacsdd='pacman -Sdd'
