alias pacss='pacman -Ss'
alias pacsasinstalled='pacman -S --assume-installed'
alias pacsyyu='pacman -Syyu'
alias pacfy='pacman -Fy'
alias pacfl='pacman -Fl'
alias pacr='pacman -R'
alias pacrns='pacman -Rns'
alias pacrnsc='pacman -Rnsc'
alias rmorphans='yay -Rnsc $(yay -Qttdq)'
alias rmcache='yay -Sc'
alias devpkgslist='pacman -Qq | grep -Ee "-(bzr|cvs|darcs|git|hg|svn)$"'
alias pkgfzfview='pacman -Qq | fzf --preview "pacman -Qil {}" --layout=reverse --bind "enter:execute(pacman -Qil {} | less)"'
alias pkgmodconfig='pacman -Qii | awk "/^MODIFIED/ {print $2}"'
# Font cache refresh
alias fontcache='fc-cache -fvr && sudo fc-cache -fvrs'
alias fontcache32='fc-cache-32 -fvr && sudo fc-cache-32 -fvrs'
# Misc
alias mnt='mount | column -t'
alias clr='clear'
alias cat='bat -p'
alias cp='cp -v'
alias ln='ln -v'
alias mv='mv -v'
alias rm='rm -v'
alias rmdir='rmdir -v'
alias mkdir='mkdir -pv'
alias rcp='rsync -v --progress'
alias chmod='chmod -c'
alias chown='chown -c'
alias own='sudo chown $USER:$USER'
alias ls='ls --color=auto --human-readable --group-directories-first'
alias ll='ls --color=auto --human-readable --group-directories-first -l'
alias lla='ls --color=auto --human-readable --group-directories-first -la'
# System info
alias meminfo='free -mlt'
alias procmem="sudo ps_mem | awk '{print $7,$8,"â€”",$9}' | head -n -3 | tail -n +3 | awk '{$1=sprintf("%.1f",$1)}1' | column -t"
alias cpuinfo='lscpu'
alias sensors='watch -n 1 "sensors"'
alias ping='ping -c 5'
alias dmesg='dmesg -HL'
# Useful shortcuts
alias vimrc='$EDITOR ~/.vimrc'
alias zshrc='$EDITOR $ZDOTDIR/.zshrc'
alias gitcfg='$EDITOR ~/.config/git/config'
alias swaycfg='$EDITOR ~/.config/sway/config'
alias tmuxcfg='$EDITOR ~/.config/tmux/tmux.conf'
alias path='echo -e ${PATH//:/\\n}'
alias now='date +"%I:%M:%S %p"'
alias nowtime=now
alias nowdate='date +"%d-%m-%Y"'
alias untar='tar -zxvf '
alias sha='shasum -a 256 '
alias ping='ping -c 5'
alias www='python -m SimpleHTTPServer 8000'
alias ipv4='lsof -Pnl +M -i4'
alias ipv6='lsof -Pnl +M -i6'
alias port='lsof -i -P | grep -i "listen"'
alias fontlist='fc-list --format="%{family[0]}\n" | sort | uniq'
