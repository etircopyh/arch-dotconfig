# pacman
alias pacq='pacman -Q'
alias pacqq='pacman -Qq'
alias pacqo='pacman -Qo'
alias pacqi='pacman -Qi'
alias pacql='pacman -Ql'
alias pacqs='pacman -Qs'
alias pacqet='pacman -Qet'
alias pacs='pacman -S'
alias pacsdd='pacman -Sdd'
alias pacsi='pacman -Si'
alias pacss='pacman -Ss'
alias pacsasinstalled='pacman -S --assume-installed'
alias pacsyyu='pacman -Syyu'
alias pacfy='pacman -Fy'
alias pacfl='pacman -Fl'
alias pacr='pacman -R'
alias pacrns='pacman -Rns'
alias pacrnsc='pacman -Rnsc'
alias rmorphans='yay -Rnsc $(yay -Qttdq)'
alias rmcache='yay -Sc'
alias devpkgslist='pacman -Qq | grep -Ee "-(bzr|cvs|darcs|git|hg|svn)$"'
alias pkgfzfview='pacman -Qq | fzf --preview "pacman -Qil {}" --layout=reverse --bind "enter:execute(pacman -Qil {} | less)"'
alias pkgmodconfig='pacman -Qii | awk "/^MODIFIED/ {print $2}"'
# Font cache refresh
alias fontcache='fc-cache -fvr && sudo fc-cache -fvrs'
alias fontcache32='fc-cache-32 -fvr && sudo fc-cache-32 -fvrs'
# Misc
alias tmp='cd $(mktemp -d)'
alias mnt='mount | column -t'
alias unicodeboot='iconv -f ASCII -t UTF-16 options.txt | dd bs=1 skip=2 > optionsunicode.txt'
alias clearswap='sudo swapoff -a;sudo swapon -a'

alias termtmux='$TERMINAL -e tmux'

# Git
alias gcob='git branch | fzf | xargs git checkout'
alias gst='git status'
alias grh='git reset --hard | fzf | xargs git branch'

# FZF
alias fzfi='rg --files --hidden --glob "\!{node_modules,.git}" | fzf'
alias vifi='vi $(fzfi)'

# skim
alias viski='vi $(sk)'
alias opensk='xdg-open $(sk)'

