alias root='sudo -i'
#alias su='sudo -i'
alias sudo='sudo '
#alias pacman='sudo pacman'
#alias nano='sudo nano'
# systemctl
alias sctl='sudo systemctl'
alias sctl-failed='systemctl --failed'
alias sctl-st='systemctl status'
alias sctl-start='sudo systemctl start'
alias sctl-stop='sudo systemctl stop'
alias sctl-re='sudo systemctl restart'
alias sctl-en='sudo systemctl enable --now'
alias sctl-dis='sudo systemctl disable --now'
alias sctl-mask='sudo systemctl mask'
alias sctl-unmask='sudo systemctl unmask'
alias sctl-dmnrld='sudo systemctl daemon-reload'
alias usctl='sudo systemctl --user'
alias usctl-failed='systemctl --user --failed'
alias usctl-st='systemctl --user status'
alias usctl-start='systemctl --user start'
alias usctl-stop='systemctl --user stop'
alias usctl-re='systemctl --user restart'
alias usctl-en='systemctl --user enable --now'
alias usctl-dis='systemctl --user disable --now'
alias usctl-mask='systemctl --user mask'
alias usctl-unmask='systemctl --user unmask'
alias usctl-dmnrld='systemctl --user daemon-reload'
# Fan Control
alias fanmax='sudo bash -c "echo 255 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[:print:]]*/pwm1"'
alias fanmin='sudo bash -c "echo 0 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[:print:]]*/pwm1"'
alias autofan='sudo bash -c "echo 2 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[[:print:]]*/pwm1_enable"'
alias manfan='sudo bash -c "echo 1 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[[:print:]]*/pwm1_enable"'
# yay
alias yayq='yay -Q'
alias yayqo='yay -Qo'
alias yayqi='yay -Qi'
alias yayql='yay -Ql'
alias yayqs='yay -Qs'
alias yayqet='yay -Qet'
alias yays='yay -S'
alias yaysi='yay -Si'
alias yayss='yay -Ss'
alias yaysasinstalled='yay -S --assume-installed'
alias yaysyyu='yay -Syyu'
alias yaysyyuaur='yay -Syyua'
alias yayr='yay -R'
alias yayrns='yay -Rns'
alias yayrnsc='yay -Rnsc'
alias yaygendb='yay -Y --gendb'
alias rmorphans='yay -Rnsc $(yay -Qtdq)'
alias rmcache='yay -Sc'
# Font cache refresh
alias fontcache='fc-cache -fvr && sudo fc-cache -fvrs'
alias fontcache32='fc-cache-32 -fvr && sudo fc-cache-32 -fvrs'
# Misc
alias mnt='mount | column -t'
alias clr='clear'
alias cat='bat -p'
alias cp='cp -v'
alias ln='ln -v'
alias mv='mv -v'
alias rm='rm -v'
alias rmdir='rmdir -v'
alias mkdir='mkdir -pv'
alias rcp='rsync -v --progress'
alias chmod='chmod -c'
alias chown='chown -c'
alias own='sudo chown $USER:$USER'
alias ls='ls --color=auto --human-readable --group-directories-first'
alias ll='ls --color=auto --human-readable --group-directories-first -l'
alias lla='ls --color=auto --human-readable --group-directories-first -la'
