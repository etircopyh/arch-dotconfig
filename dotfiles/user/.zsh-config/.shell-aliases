# Linux utils
alias c=clear
alias clr=clear
# alias curl='curl -fsSL'
alias cat='bat -p --color always --theme="Dracula"'
# alias diff='nvim -d'
# alias diff='diff --color=always'
alias diffdir='diff -rq movuewer-vue3 movuewer3-newtest --exclude={node_modules,.bzr,CVS,.git,.hg,.svn}'
alias cp='cp -v'
alias ln='ln -v'
alias mv='mv -v'
alias rm='rm -v'
alias rmrf='rm -rf'
alias mkdir='mkdir -pv'
alias rcp='rsync -v --progress'
alias chmod='chmod -c'
alias chown='chown -c'
alias own='sudo chown $USER:$USER'
alias find='fd --color auto --hidden --ignore-file ~/.config/git/ignore --type file'
alias grep='rg --color=auto'
alias fgrep='rg -F --color=auto'
alias egrep='rg -e --color=auto'
# ls
TREE_IGNORE='cache|log|logs|node_modules|vendor'
alias ls='exa --color=auto --header --group-directories-first --icons --git'
alias ll='ls -l'
alias la='ls -la'
alias lt='ls --tree -D -L 2 -I ${TREE_IGNORE}'
alias ltt='ls --tree -D -L 3 -I ${TREE_IGNORE}'
alias lttt='ls --tree -D -L 4 -I ${TREE_IGNORE}'
alias ltttt='ls --tree -D -L 5 -I ${TREE_IGNORE}'

# Regular aliases
alias oldvim='command vim'
alias vi='$EDITOR'
alias vim='nvim'
alias r='ranger'
alias q=exit

# su
alias root='sudo -i'
alias sudo='sudo '
alias fuck='sudo !!'
# alias pacman='sudo pacman'
alias suvi='sudo env HOME=$HOME $EDITOR'
alias sucp='sudo cp'
alias sumv='sudo mv'
alias suln='sudo ln'
alias surm='sudo rm'
alias surmdir='sudo rm -rf'
alias sumkdir='sudo mkdir'

# systemctl
alias sctl='sudo systemctl'
alias sctl-failed='systemctl --failed'
alias sctl-st='systemctl status'
alias sctl-start='sudo systemctl start'
alias sctl-stop='sudo systemctl stop'
alias sctl-re='sudo systemctl restart'
alias sctl-en='sudo systemctl enable --now'
alias sctl-dis='sudo systemctl disable --now'
alias sctl-mask='sudo systemctl mask'
alias sctl-unmask='sudo systemctl unmask'
alias sctl-dmnrld='sudo systemctl daemon-reload'
alias usctl='sudo systemctl --user'
alias usctl-failed='systemctl --user --failed'
alias usctl-st='systemctl --user status'
alias usctl-start='systemctl --user start'
alias usctl-stop='systemctl --user stop'
alias usctl-re='systemctl --user restart'
alias usctl-en='systemctl --user enable --now'
alias usctl-dis='systemctl --user disable --now'
alias usctl-mask='systemctl --user mask'
alias usctl-unmask='systemctl --user unmask'
alias usctl-dmnrld='systemctl --user daemon-reload'
# Fan Control
alias fanmax='sudo $SHELL -c "echo 255 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[:print:]]*/pwm1" && notify-send -a System "Fan Maximum Speed Engaged"'
alias fanmin='sudo $SHELL -c "echo 0 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[:print:]]*/pwm1" && notify-send -a System "Fan Minimum Speed Engaged"'
alias autofan='sudo $SHELL -c "echo 2 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[[:print:]]*/pwm1_enable" && notify-send -a System "Fan Speed Auto Control Engaged"'
alias manfan='sudo $SHELL -c "echo 1 > /sys/devices/platform/asus-nb-wmi/hwmon/hwmon[[[:print:]]*/pwm1_enable" && notify-send -a System "Fan Manual Speed Control Engaged"'
